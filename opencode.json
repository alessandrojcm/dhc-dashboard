{
	"$schema": "https://opencode.ai/config.json",
	"theme": "opencode",
	"autoupdate": true,
	"mcp": {
		"supabase": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-postgres",
				"postgresql://postgres:postgres@localhost:54322/postgres"
			]
		},
		"svelte": {
			"type": "remote",
			"url": "https://mcp.svelte.dev/mcp",
			"enabled": true
		}
	}
}
